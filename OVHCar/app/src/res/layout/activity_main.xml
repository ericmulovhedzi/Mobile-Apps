<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    tools:context=".MainActivity">








    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <RelativeLayout
            android:id="@+id/tone"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="HONK"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ttwo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"

            android:clickable="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:text="HONK"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/tthree"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:clickable="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/tone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:text="HONK"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>




    <RelativeLayout
        android:layout_below="@+id/text"
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/one"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_hazard"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/two"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/one">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/ic_baseline_lock_open_24"
                    android:textColor="@color/white" />

            </LinearLayout>


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/three"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/one">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/ic_baseline_lock_open_24"
                    android:textColor="@color/white" />


            </LinearLayout>
        </RelativeLayout>





    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/btnStartEngine"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:background="@drawable/shape"
            android:layout_centerInParent="true"
            android:layout_height="180dp">



            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_above="@+id/engine"
                android:layout_gravity="center"
                android:layout_height="15dp"
                android:background="@drawable/status_style"
                android:layout_marginBottom="10dp"

                />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/engine"
                android:layout_above="@+id/engine_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="ENGINE" />
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/engine_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="ON" />

            <TextView
                android:layout_below="@+id/engine_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="START"

                />




        </RelativeLayout>


    </RelativeLayout>






    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/btnStopEngine"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:background="@drawable/shape"
            android:layout_centerInParent="true"
            android:layout_height="180dp">



            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_above="@+id/engine_stop"
                android:layout_gravity="center"
                android:layout_height="15dp"
                android:background="@drawable/status_style"
                android:layout_marginBottom="10dp"

                />


            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/engine_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="ENGINE" />

            <TextView
                android:layout_below="@+id/engine_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="STOP"

                />




        </RelativeLayout>


    </RelativeLayout>



</LinearLayout>