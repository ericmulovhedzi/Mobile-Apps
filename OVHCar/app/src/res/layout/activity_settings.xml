<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">




<TextView
    android:id="@+id/textview"
    android:text="Automatic pedals"
    android:paddingLeft="5dp"
    android:textSize="20dp"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:layout_margin="5dp"
    android:background="@drawable/buttom_style_setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>







    <com.cardiomood.android.controls.gauge.SpeedometerGauge
        android:layout_below="@+id/textview"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:id="@+id/halfGauge" />




    <LinearLayout
        android:layout_margin="5dp"
        android:layout_below="@+id/halfGauge"
        android:id="@+id/bottombtn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@android:color/transparent"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/clutch"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:background="@drawable/buttom_style_setting"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/check_honk"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:layout_width="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="2dp"/>



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/image_honk1"
                    android:layout_below="@+id/check_honk"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">





                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_below="@+id/image_honk1"
                    android:text="Clutch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/brakes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:background="@drawable/buttom_style_setting"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/check_locks"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:layout_width="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="2dp"/>



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/image_honk"
                    android:layout_below="@+id/check_locks"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                </LinearLayout>


                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_below="@+id/image_honk"
                    android:text="Brake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/accelerator"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:background="@drawable/buttom_style_setting"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/check_hazards"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:layout_width="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="2dp"/>



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/hazards"
                    android:layout_below="@+id/check_hazards"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">






                </LinearLayout>


                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_below="@+id/hazards"
                    android:text="Accelerator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </RelativeLayout>





    </LinearLayout>





</RelativeLayout>