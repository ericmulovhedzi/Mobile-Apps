<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.TestDrive">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Test Drive"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_styling"
        android:ems="10"
        android:hint="Name"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/editTextTextSurname"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_styling"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/editTextTextPersonName"
        />

    <EditText
        android:id="@+id/editTextCell"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_styling"
        android:ems="10"
        android:hint="Cell"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/editTextTextSurname"
        />

    <EditText
        android:id="@+id/editTextEmail"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_styling"
        android:ems="10"
        android:hint="Email"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/editTextCell"
        />



    <EditText
        android:id="@+id/editTextDOT"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_styling"
        android:ems="10"
        android:hint="Test driving date"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/editTextEmail"
        />

    <Spinner
        android:id="@+id/editTextTextGrade"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:backgroundTint="#808080"
        android:entries="@array/gender"
        android:popupBackground="@android:color/black"
        android:spinnerMode="dialog"
        android:text=""
        android:textColor="@color/red"
        android:layout_below="@+id/editTextDOT"
         />


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_styling"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#000000"

        />



</RelativeLayout>